@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Title = "Connexion client";
}

<h1>Oué</h1>


@model GestionRelationClient.Models.Client
<form class="formInscriptionClient" asp-action="ConnectClient">

    <div class="form-group">
        <div>
            <label asp-for="Login">Login</label>
            <input type="text" asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div>
            <label asp-for="MotDePasse">Mot de passe</label>
            <input type="password" asp-for="MotDePasse" class="form-control form-control-motDePasse" />
            <span asp-validation-for="MotDePasse" class="text-danger"></span>
        </div>
    </div>



    <button type="submit" class="btn btn-primary toHorizontalyCenter">Se connecter</button>
</form>




<a class="btn btn-link" asp-action="InscriptionClient" role="button">Pas encore inscrit ?</a>