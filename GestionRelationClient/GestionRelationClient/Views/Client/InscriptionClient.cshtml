@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.Title = "Inscription client";
}



@model GestionRelationClient.Models.Client
<form class="formInscriptionClient" asp-action="InscriptionClient">

    <div class="form-group">
        <div>
            <label asp-for="Login">Login</label>
            <input type="text" asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Mail">Mail</label>
            <input type="text" asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group">

        <div>
            <label asp-for="Nom">Nom</label>
            <input type="text" asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="Prenom">Prénom</label>
            <input type="text" asp-for="Prenom" class="form-control" />
            <span asp-validation-for="Prenom" class="text-danger"></span>
        </div>
        

    </div>

    <div class="form-group">

        <div>
            <label asp-for="MotDePasse">Mot de passe</label>
            <input type="password" asp-for="MotDePasse" class="form-control form-control-motDePasse" />
            <span asp-validation-for="MotDePasse" class="text-danger"></span>
        </div>
        

    </div>

    <div class="form-group">

        <div>
            <label asp-for="Telephone">Téléphone</label>
            <input type="text" asp-for="Telephone" class="form-control" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="Age">Age</label>
            <input type="number" asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        
    </div>


    <button type="submit" class="btn btn-primary toHorizontalyCenter">S'inscrire</button>
</form>

<a class="btn btn-link toHorizontalyCenter" asp-action="ConnectClient" role="button">Déjà inscrit ?</a>


