@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutGestionnaire";
    ViewBag.Title = "Ajout de clients associés";
}
@using GestionRelationClient.Models
@{
    List<Client> clients = ViewData["clientsDisponibles"] as List<Client>;
}
@model GestionRelationClient.Models.Gestionnaire

<div class="interfaceGestionnaire">
    <h2>Liste des clients disponibles</h2>


    <!-- Liste des clients disponibles -->
    <div class="clientsListe clientListeAajouter">
        @foreach (GestionRelationClient.Models.Client client in clients)
        {
            @using (Html.BeginForm("AjoutClientAssocie", "Gestionnaire", FormMethod.Post))
            {
                <div class="formSelectionClient">
                    @Html.Hidden("IdClient", client.UtilisateurId)
                    @Html.Hidden("IdGestionnaire", Model.UtilisateurId)
                    <partial name="_Client" model=client />
                    <div class="buttons">
                        <button type="submit" class="btn"><img src="~/img/plus2.png" alt="Associer ce compte" /></button>
                    </div>
                </div>
            }
        }
    </div>
</div>
