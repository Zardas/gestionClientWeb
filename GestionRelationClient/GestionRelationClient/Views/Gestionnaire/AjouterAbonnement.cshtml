@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutGestionnaire";
    ViewBag.Title = "";
}
@model GestionRelationClient.Models.Gestionnaire

<div class="interfaceGestionnaire">
    <h2>Ajout d'un abonnement pour @Model.NomGestionnaire</h2>

    <div class="ajoutArticle">
        @using (Html.BeginForm("AjouterAbonnement", "Gestionnaire", FormMethod.Post))
        {
            @Html.Hidden("GestionnaireId", Model.UtilisateurId)
            <div class="form-group">
                <div>
                    <label for="Duree">Duree en mois</label>
                    <input type="number" name="Duree" class="form-control" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Ajouter cet abonnement</button>
        }
    </div>

</div>