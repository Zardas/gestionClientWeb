@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/css/site.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <script src="~/js/site.min.js"></script>
    <title>@ViewBag.Title</title>
</head>

<body>

    <!-- HEADER -->
    <nav>
        <div class="menu">
            <a class="menuLink" asp-controller="Client" asp-action="ConnectClient" role="button">Accueil</a>
            @model GestionRelationClient.Models.Gestionnaire
            <a class="menuLink" asp-controller="Gestionnaire" asp-action="InterfaceGestionnaire" asp-route-IdGestionnaire="@Model.UtilisateurId" role="button">Menu</a>
            <a class="menuLink" asp-controller="Gestionnaire" asp-action="AjoutClientAssocie" asp-route-IdGestionnaire="@Model.UtilisateurId" role="button">Associer un client</a>
            <a class="menuLink" asp-controller="Gestionnaire" asp-action="AjouterProduit" asp-route-IdGestionnaire="@Model.UtilisateurId" role="button">Ajouter un produit</a>
            <a class="menuLink" asp-controller="Gestionnaire" asp-action="AjouterService" asp-route-IdGestionnaire="@Model.UtilisateurId" role="button">Ajouter un service</a>
            <a class="menuLink" asp-controller="Gestionnaire" asp-action="AjouterAbonnement" asp-route-IdGestionnaire="@Model.UtilisateurId" role="button">Ajouter un abonnement</a>
            <a class="menuLink" asp-controller="Gestionnaire" asp-action="ListeTicketsGestionnaire" asp-route-IdGestionnaire="@Model.UtilisateurId" role="button">Liste des tickets</a>
        </div>
    </nav>

    @RenderBody()
</body>
</html>