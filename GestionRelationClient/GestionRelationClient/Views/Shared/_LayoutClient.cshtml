@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/css/site.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <script src="~/js/site.min.js"></script>
    <title>@ViewBag.Title</title>
</head>

<body>

    <!-- HEADER -->
    <nav>
        <div class="acceuil">
            <a class="menuLink" asp-controller="Client" asp-action="ConnectClient" role="button">Accueil</a>
        </div>
        <div class="menu">
            @model GestionRelationClient.Models.Compte
            <a class="menuLink" asp-controller="Client" asp-action="InterfaceClient" asp-route-CompteId="@Model.CompteId" role="button">Menu</a>
            <a class="menuLink" asp-controller="Client" asp-action="SoldeClient" asp-route-CompteId="@Model.CompteId" role="button">Mon solde</a>
        </div>
    </nav>

    @RenderBody()
</body>
</html>