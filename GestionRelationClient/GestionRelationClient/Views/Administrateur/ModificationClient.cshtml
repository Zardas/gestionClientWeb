@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutAdministrateur";
    ViewBag.Title = "Ajout client";
}
@using GestionRelationClient.Models
@{
    Client client = ViewData["Client"] as Client;
}


@model GestionRelationClient.Models.Administrateur

<div class="interfaceGestionnaire">
    <h2>Modification du client @client.Login</h2>

    <div class="ajoutArticle">
        @using (Html.BeginForm("ModificationClient", "Administrateur", FormMethod.Post))
        {
            @Html.Hidden("AdministrateurId", Model.UtilisateurId)
            @Html.Hidden("ClientId", client.UtilisateurId)
            <div class="form-group">
                <div>
                    <label for="Login">Login</label>
                    <input type="text" name="Login" class="form-control" value="@client.Login" required />
                </div>
                <div>
                    <label for="Mail">Mail</label>
                    <input type="text" name="Mail" class="form-control" value="@client.Mail" required />
                </div>
            </div>


            <div class="form-group">
                <div>
                    <label for="Nom">Nom</label>
                    <input type="text" name="Nom" class="form-control" value="@client.Nom" required />
                </div>
                <div>
                    <label for="Prenom">Prenom</label>
                    <input type="text" name="Prenom" class="form-control" value="@client.Prenom" required />
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label for="Telephone">Téléphone</label>
                    <input type="text" name="Telephone" class="form-control" value="@client.Telephone" required />
                </div>
                <div>
                    <label for="Age">Age</label>
                    <input type="number" name="Age" class="form-control" value="@client.Age" required />
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Modifier ce client</button>
        }
    </div>

</div>